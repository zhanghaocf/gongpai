.modal{
  position: fixed;
  z-index: 2;
  left: 0;
  top: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0,0,0,0.28);
}
.modalwrap{
  position:absolute;
  left:50%;
  top:50%;
  width:560rpx;
  background-color: white;
  transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
}
